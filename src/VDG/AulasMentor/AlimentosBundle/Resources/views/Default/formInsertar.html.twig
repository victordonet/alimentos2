{% extends 'VDGAulasMentorAlimentosBundle:Default:layout.html.twig' %}

{% block contenido %}
    {% if mensaje is defined %}
        <b><span style="color: red;">{{ mensaje }}</span></b>
    {% endif %}
    <form name="formInsertar" action="{{ path('VAMAB_insertar') }}" method="POST">
        <h3>Insertar nuevo alimento</h3>
        <table>
            <tr><td colspan="2" align="center"><p>* Los valores deben referirse a 100 g del alimento</p></td></tr>
            <tr>
                <th align="right">Nombre</th>
                <td><input type="text" name="nombre" value="{{ nombre }}" /></td>
            </tr>
            <tr>
                <th align="right">Energ&iacute;a (Kcal)</th>
                <td><input type="text" name="energia" value="{{ energia }}" /></td>
            </tr>
            <tr>
                <th align="right">Proteina (g)</th>
                <td><input type="text" name="proteina" value="{{ proteina }}" /></td>
            </tr>
            <tr>
                <th align="right">H. de carbono (g)</th>
                <td><input type="text" name="hc" value="{{ hc }}" /></td>
            </tr>
            <tr>
                <th align="right">Fibra (g)</th>
                <td><input type="text" name="fibra" value="{{ fibra }}" /></td>
            </tr>
            <tr>
                <th align="right">Grasa total (g)</th>
                <td><input type="text" name="grasa" value="{{ grasa }}" /></td>
            </tr>
            <tr>
                <td colspan="2" align="center"><input type="submit" value="insertar" name="insertar" /></td>
            </tr>
        </table>
    </form>

{% endblock %}