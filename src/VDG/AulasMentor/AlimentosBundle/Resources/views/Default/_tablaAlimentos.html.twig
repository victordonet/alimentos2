        <th>proteina (g)</th>
        <th>Hidratos de Carbono (g)</th>
        <th>fibra (g)</th>
        <th>grasa (g)</th>
    </tr>
    {% for alimento in alimentos %}
    <tr>
        <td><a href="{{ path('VAMAB_ver', {'id':alimento.id}) }}">
            {{ nombre }}</a></td>
        <td>{{ alimento.energia }}</td>
        <td>{{ alimento.proteina }}</td>
        <td>{{ alimento.hidratocarbono }}</td>
        <td>{{ alimento.fibra }}</td>
        <td>{{ alimento.grasatotal }}</td>
    </tr>
    {% else %}
        <tr><td colspan="6" align="center">No se ha encontrado ning√∫n alimento</td></tr>
    {% endfor %}
</table>
